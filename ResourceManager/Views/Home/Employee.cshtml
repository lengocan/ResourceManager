@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section>
    <div class="d-flex justify-content-end">
        <div class=" mb-3 p-3 mt-3">
            <a href="#" class="btn btn-primary shadow rounded" data-bs-toggle="modal" data-bs-target="#addInfoUser">Add account</a>
        </div>
        
    </div>


    <div class="d-flex justify-content-between gap-4">
        <article class="d-grid flex-grow-1">
            @* list item *@
            <div class="bg-white px-3 py-2 shadow rounded">
                <table class="table table-bordered">
                    <thead>
                        <tr class="text-center">
                            <th>STT</th>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Phone number</th>
                            <td>
                                <select class="form-select" id="teamSelect">
                                    <option value="0">Team</option>
                                    <option value="1">TPHCM</option>
                                    <option value="2">Ha Noi</option>
                                    <option value="3">Da Nang</option>

                                </select>
                            </td>
                            
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="listEmployee">
                        <tr>
                            <td colspan="5" class="text-center">No data</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </article>
    </div>
</section>


@Html.Partial("ModalAddUserPartial")
@section Scripts {
    <script src="~/js/employee.js"></script>
}
