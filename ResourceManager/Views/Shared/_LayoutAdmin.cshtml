            width: 150px;
            margin-top: 20px;
        }

            .image-container img {
                width: 100%;
                height: auto;
                border-radius: 50%;
            }

            .image-container input {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                opacity: 0;
                cursor: pointer;
            }

            .image-container .btn {
                position: absolute;
                bottom: 3rem;
                left: 50%;
                transform: translateX(-50%);
                background-color: rgba(0, 0, 0, 0.5);
                color: white;
                border: none;
                border-radius: 20px;
                cursor: pointer;
            }
    </style>
    <div class="modal fade" id="infoUser" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content ">
                <div class="modal-header bg-white">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body bg-white">
                    <div class="container rounded  mt-5 mb-5">
                        <div class="row">
                            <div class="col-md-3 border-right">


                                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                                    <div class="image-container">
                                        <img class="rounded-circle mt-5" id="userImage" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                                        <input type="file" id="customFile2" onchange="displaySelectedImage(event, 'userImage')" />
                                        <label for="customFile2" class="btn">Choose file</label>
                                    </div>

                                    <span class="font-weight-bold">User Name</span>
                                    <span class="text-black-50">user@gmail.com.my</span>
                                </div>
                                <script>
                                    function displaySelectedImage(event, imgTagId) {
                                        const file = event.target.files[0];
                                        if (file) {
                                            const reader = new FileReader();
                                            reader.onload = function (e) {
                                                const imgTag = document.getElementById(imgTagId);
                                                imgTag.src = e.target.result;
                                                imgTag.style.display = 'block'; // Make sure the image is visible

                                                const chooseFileLabel = event.target.nextElementSibling;
                                                chooseFileLabel.style.display = 'none';
                                            }
                                            reader.readAsDataURL(file);

                                        }
                                    }
                                </script>
                            </div>
                            <div class="col-md-5 border-right">
                                <div class="p-3 py-5">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h4 class="text-right">Profile Detail</h4>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-md-12">
                                            <label class="labels">Full Name</label>
                                            <input type="text" class="form-control modalfullname" placeholder="Input your full name" value="" >
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-md-12"><label class="labels">Email</label><input type="email" class="form-control modalemail" placeholder="Input your email" value="" ></div>
                                    </div>
                                    <div class="row mt-3">

                                        <div class="col-md-12"><label class="labels">Mobile Number</label><input type="tel" class="form-control modalnumber" placeholder="Input your phone number" value="" ></div>

                                    </div>
                                    <div class="row mt-3">

                                        <div class="col-md-12"><label class="labels">Birth Day</label><input type="date" class="form-control modalbirthday" placeholder="Your birthday" value="" ></div>

                                    </div>
                                    <div class="row mt-3">

                                        <div class="col-md-12"><label class="labels">Join day</label><input type="date" class="form-control modaljoinday" placeholder="Your Onboard day" value="" ></div>

                                    </div>
                                    
                                    <div class="row mt-3">

                                        <div class="col-md-12"><label class="labels">Address</label><input type="text" class="form-control modaladdress" placeholder="Your city" value="" ></div>

                                    </div>
                                    <div class="row mt-3">

                                        <div class="col-md-12">
                                            <label class="labels">Team</label>
                                              <select class="form-control modalteam">
                                                    <option value="" disabled selected>Select your team</option>
                                                    <option value="1">TPHCM</option>
                                                    <option value="2">Ha Noi</option>
                                                    <option value="3">Da Nang</option>
                                              </select>
                                        </div>

                                    </div>

                                    

                                </div>
                            </div>

                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">Close</button>
                    <button id="saveInfo" class="btn btn-primary profile-button" type="button" >Save Profile</button>
                </div>
            </div>
        </div>
    </div>
